<div class="loginForm">
    <form method="post" action="/login" class="form-signin">
        <h2>Login</h2>
        {{#if error}}
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
        {{/if}}
        <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="text" id="email" name="email_login"  placeholder="Email address" required autofocus>
        </div>

        <div class="form-group">
            <label for="password"  >Password</label>
            <input type="password" id="password" name="password_login" class="form-control" placeholder="Password" required>
        </div>

        <button type="submit"  class="btn btn-lg btn-primary btn-block">Submit</button>
        <br>
        <label for="register">Not a User?</label>
        <button id="register" type="button"  class="btn btn-lg btn-primary btn-block" onclick="window.location.href='/register'">Register</button>

    </form>
</div>



